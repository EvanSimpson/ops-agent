#!/usr/bin/make -f

#include /usr/share/cdbs/1/rules/debhelper.mk
%:
	dh $@
override_dh_auto_configure:
	true
override_dh_auto_build:
	true
override_dh_auto_install:
	cd ../.. && DESTDIR=$$PWD/pkg/deb/debian/google-cloud-ops-agent ./build.sh

override_dh_installsystemd:
	dh_installsystemd google-cloud-ops-agent.target \
	    google-cloud-ops-agent-collectd.service \
	    google-cloud-ops-agent-fluent-bit.service \
	    google-cloud-ops-agent.service

override_dh_systemd_start:
	dh_systemd_start google-cloud-ops-agent.target
